{
    "EXE" : [
        "rm -rf components i18n lib media samples",
        "mkdir -p samples/js samples/css samples/components lib/js lib/css",
        "cp -r source/media ./"
    ],

    // main Lib
    //
    "source/lib/js/tpl/widgzard.js" : "lib/js -vars=source/lib/vars.json -plugins=malta-js-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt']",
    "source/components/*.js" : "samples/components  -vars=source/lib/vars.json -plugins=malta-js-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt']",
    // "source/lib/js/tpl/theWidgzard.js" : "lib/js -vars=source/lib/vars.json -plugins=malta-header-comment[name:'source/lib/js/tpl/header.txt']",
    "source/lib/less/theWidgzard.less" : "lib/css -vars=source/lib/vars.json -plugins=malta-less...malta-css-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt']",

    //
    // SAMPLES
    //
    "source/index.html" : ". -plugins=malta-browser-refresh[files:\"*\"]",
    "source/samples/*.html" : "samples",
    "source/samples/*.js" : "samples/js",
    "source/samples/*.less" : "samples/css -plugins=malta-less"
}