{
    "EXE": [
        "rm -rf home media samples lib index.html srv.js",
        "mkdir -p samples/components lib/js lib/css home",
        "cp -r source/media ./",
        "cp source/home/*.woff home/",
        "cp source/media/img/Sorted_binary_tree_postorder.svg ."
    ],

    // Main Lib
    //
    "source/srv.js": ". -vars=source/lib/vars.json",
    "source/lib/js/tpl/widgzard.js": "lib/js -plugins=malta-header-comment[name:\"source/lib/js/tpl/header.txt\"] -vars=source/lib/vars.json",
    "source/base/base.js": "lib/js -plugins=malta-header-comment[name:\"source/lib/js/tpl/header.txt\"]",
    "source/lib/less/theWidgzard.less": "lib/css -vars=source/lib/vars.json -plugins=malta-less",

    // SAMPLES
    //
    "source/home/index.html": ". -vars=source/lib/vars.json",
    "source/home/style.css": "home",
    "source/home/script.js": "home",
    "source/samples/components/*.js": "samples/components -vars=source/lib/vars.json",
    "source/samples/index.html": "samples",
    
    "source/samples/2wdb/require.json": true,
    "source/samples/store/require.json": true,
    "source/samples/4carousel/require.json": true,
    "source/samples/basic/require.json": true
}