{
    "EXE": [
        "mkdir -p samples/components",
        "mkdir -p samples/2wdb/js",
        "mkdir -p samples/2wdb/css",

        "cp -R source/samples/4carousel/media samples/4carousel",

        "mkdir -p samples/basic",

        "mkdir -p samples/store"
    ],
    "source/samples/components/*.js": "samples/components -vars=source/lib/vars.json",
    "source/samples/index.html": "samples -plugins=malta-browser-refresh[files:\"*\"] -vars=source/lib/vars.json",
    "source/samples/2wdb/*.html": "samples/2wdb -plugins=malta-browser-refresh[files:\"*\"] -vars=source/lib/vars.json",
    "source/samples/2wdb/*.js": "samples/2wdb/js -vars=source/lib/vars.json",
    "source/samples/2wdb/*.less": "samples/2wdb/css -plugins=malta-less",

    "source/samples/4carousel/index.html": "samples/4carousel -vars=source/lib/vars.json",
    "source/samples/4carousel/*.js": "samples/4carousel -vars=source/lib/vars.json",

    "source/samples/basic/index.html": "samples/basic -plugins=malta-browser-refresh[files:\"*\"] -vars=source/lib/vars.json",
    "source/samples/basic/index.js": "samples/basic -vars=source/lib/vars.json",

    "source/samples/store/index.html": "samples/store"
}