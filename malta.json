{
    "EXE": [
        "rm -rf media samples lib index.html",
        "mkdir -p samples/js samples/css samples/components lib/js lib/css",
        "cp -r source/media ./"
    ],
    "#source/lib/js/tpl/widgzard.js": "lib/js -plugins=malta-js-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt'] -vars=source/lib/vars.json",
    "#source/lib/less/theWidgzard.less": "lib/css  -plugins=malta-less...malta-css-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt'] -vars=source/lib/vars.json",

    "#source/media/img/*.svg": "media/img",

    "#source/index.html": ". -vars=source/lib/vars.json",
    "#source/samples/*.html": "samples -vars=source/lib/vars.json",
    "#source/samples/*.js": "samples/js -vars=source/lib/vars.json",
    "#source/samples/components/*.js": "samples/components -vars=source/lib/vars.json",
    "#source/samples/*.less": "samples/css -plugins=malta-less"
}