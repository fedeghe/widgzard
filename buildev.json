{
    "EXE" : [
        "rm -rf media samples lib",
        "mkdir -p samples/js samples/css samples/components lib/js lib/css",
        "cp -r source/media ./"
    ],

    //
    // Main Lib
    //
    "source/lib/js/tpl/widgzard.js" : "lib/js -plugins=malta-js-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt'] -vars=source/lib/vars.json",
    "source/lib/less/theWidgzard.less" : "lib/css -vars=source/lib/vars.json -plugins=malta-less...malta-css-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt']",
    
    //
    // SAMPLES
    //
    "source/index.html" : ". -plugins=malta-browser-refresh[files:\"*\"]",
    "source/samples/*.html" : "samples -plugins=malta-browser-refresh[files:\"*\"] -vars=source/lib/vars.json",
    "source/samples/*.js" : "samples/js -vars=source/lib/vars.json",
    "source/samples/components/*.js" : "samples/components  -vars=source/lib/vars.json -plugins=malta-js-uglify...malta-header-comment[name:'source/lib/js/tpl/header.txt']",
    "source/samples/*.less" : "samples/css -plugins=malta-less"
}