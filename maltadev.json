{
    "EXE": [
        "rm -rf media samples lib index.html",
        "mkdir -p samples/js samples/css samples/components lib/js lib/css",
        "cp -r source/media ./"
    ],

    //
    // Main Lib
    //
    "source/srv.js": ". -vars=source/lib/vars.json",
    "source/lib/js/tpl/widgzard.js": "lib/js -vars=source/lib/vars.json",
    "source/lib/less/theWidgzard.less": "lib/css -vars=source/lib/vars.json -plugins=malta-less",

    //
    // MEDIA
    //
    "source/media/img/*.svg": "media/img",

    //
    // SAMPLES
    //
    "source/index.html": ". -plugins=malta-browser-refresh[files:\"*\"]",
    "source/samples/*.html": "samples -plugins=malta-browser-refresh[files:\"*\"] -vars=source/lib/vars.json",
    "source/samples/*.js": "samples/js -vars=source/lib/vars.json",
    "source/samples/components/*.js": "samples/components -vars=source/lib/vars.json",
    "source/samples/*.less": "samples/css -plugins=malta-less"
}